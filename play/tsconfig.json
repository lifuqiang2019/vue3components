{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@vue3-components/components": ["../packages/components/src"],
      "@vue3-components/components/*": ["../packages/components/src/*"],
      "@vue3-components/utils": ["../packages/utils/src"],
      "@vue3-components/utils/*": ["../packages/utils/src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}

